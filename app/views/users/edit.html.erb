<h2> Edit Profile</h2>
<br>
<%= form_for @user do |f| %>
    <div class="form-group row">
        <%= f.label :name, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :name, :class => 'form-control' %><br />
        </div>
    </div>
    

    <%= f.submit "Update" %>
<% end %>
