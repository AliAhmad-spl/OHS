<%= loading_screen style: :double_bounce %>
<div class="container-fluid">
  <div  style="margin: 50px auto 0;">
    <div class="card-deck">
      <% current_user.hostels.each do |hostel| %>
        <div class="card">
          <img class="card-img-top" src="/landing.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= hostel.name %> <span class="badge badge-secondary">
              <%= hostel.status %></span></h5>
            <p class="card-text"><%= hostel&.description %></p>
            <p class="card-text"><small class="text-muted"><%= time_ago_in_words(hostel.created_at)%> ago </small></p>
            <a href="<%= hostels_path(hostel) %>" data-confirm="Are you sure?" data-method="delete" style="color:black">
              <i class="fas fa-trash" style="font-size:24px; float: right;"></i>
            </a>
            <a href="<%= edit_hostel_path(hostel) %>">
              <i class="fas fa-edit" style="font-size:24px; float: right;"> &nbsp;</i>
               <a href="<%= hostel_path(hostel) %>" >
              <i class="fas fa-eye" style="font-size:24px; float: right;">&nbsp;</i>
            </a>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>